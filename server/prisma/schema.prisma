// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String   @map("password_hash")
  emailVerified Boolean  @default(false) @map("email_verified")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  settings      UserSettings?
  draftPosts    DraftPost[]
  publishedPosts PublishedPost[]

  @@map("users")
}

model UserSettings {
  id                String   @id @default(cuid())
  userId            String   @unique @map("user_id")
  toneOfVoice       String   @map("tone_of_voice")
  industry          String
  position          String
  audience          String
  postGoal          String   @map("post_goal")
  keywords          String
  contentExamples   String   @map("content_examples") // JSON string array
  timeZone          String   @map("time_zone")
  preferredTime     String   @map("preferred_time")
  profilePictureUrl String?  @map("profile_picture_url")
  englishVariant    String   @map("english_variant")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

model DraftPost {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  title        String
  text         String
  imageUrl     String?  @map("image_url")
  isPublishing Boolean  @default(false) @map("is_publishing")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("draft_posts")
}

model PublishedPost {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  title       String
  text        String
  imageUrl    String?  @map("image_url")
  publishedAt String   @map("published_at") // Store as string to match current format
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("published_posts")
}
